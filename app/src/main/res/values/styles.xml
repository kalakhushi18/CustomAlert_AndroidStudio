<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="android:radius">10dp</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:padding">5dp</item>
        <item name="buttonBarPositiveButtonStyle">@style/positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/negative</item>
    </style>
    <style name="positive" parent="Theme.AppCompat.Light.Dialog.Alert">


        <item name="android:layout_margin">30dp</item>
    </style>
    <style name="negative" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="android:layout_margin">20dp</item>
    </style>

</resources>